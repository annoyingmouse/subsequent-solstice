<BaseLayout pageTitle={pageTitle}>
  <div class="tags">
    {tags.map((tag) => (
      <p>
        <a href={`/tags/${tag}`} class="tag">{tag}</a>
      </p>
    ))}
  </div>
</BaseLayout>

